= form_for @user_role do |f|
  - if @user_role.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_role.errors.count, "error")} prohibited this user_role from being saved:"
      %ul
        - @user_role.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :role
    = f.text_field :role
  .actions
    = f.submit 'Save'
