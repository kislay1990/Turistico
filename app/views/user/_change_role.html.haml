= form_for @user.roles.first, method: :post, url: "/users/#{@user.id}/role" do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.select :id, @roles.collect{|r| [r.name, r.id]}
  .actions
    = f.submit 'Save'
